{
    "version": "0.1.0",
    "description": "文涌编辑器（Effidit）是一款带有AI辅助写作功能的文本编辑工具，由腾讯AI Lab开发。",
    "homepage": "https://effidit.qq.com",
    "license": "Unknown",
    "url": "https://effidit.qq.com/effidit-v0.1.0-zh-setup.msi",
    "hash": "cf4ece0a76894ad4a938b7c30bfc25ef29392793e0aae6c79f96383cfd7db71e",
    "installer": {
        "script": [
            "# handle runtime cache",
            "if (!(Test-Path $persist_dir)) {",
            "    New-Item $persist_dir -Type Directory -Force | Out-Null",
            "}",
            "$runtimeCache = \"$env:APPDATA\\Tencent\\Effidit\"",
            "$runtimeCachePersist = \"$persist_dir\\appdata\"",
            "if (Test-Path $runtimeCachePersist) {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "} else {",
            "    if (Test-Path $runtimeCache) {",
            "        Move-Item $runtimeCache $runtimeCachePersist -Force",
            "        New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "    }",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$runtimeCache = \"$env:APPDATA\\Tencent\\Effidit\"",
            "$runtimeCachePersist = \"$persist_dir\\appdata\"",
            "if (!(Test-Path $runtimeCachePersist)) {",
            "    Move-Item $runtimeCache $runtimeCachePersist -Force",
            "} else {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Effidit.exe",
            "Effidit"
        ]
    ],
    "checkver": {
        "url": "https://effidit.qq.com/js/app.70fefabd3c687d16196c.js",
        "regex": "effidit-v([\\d.]+)-zh-setup.msi"
    },
    "autoupdate": {
        "url": "https://effidit.qq.com/effidit-v$version-zh-setup.msi"
    }
}
