    "hash": "fdd5a1f732e4d7241af57186488fef9709291ced221e713ad31933f29e1ef75f",
    "installer": {
        "script": [
            "# handle runtime cache",
            "if (!(Test-Path $persist_dir)) {",
            "    New-Item $persist_dir -Type Directory -Force | Out-Null",
            "}",
            "$runtimeCache = \"$env:LOCALAPPDATA\\xfangfang\"",
            "$runtimeCachePersist = \"$persist_dir\\appdata\"",
            "if (Test-Path $runtimeCachePersist) {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "    New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "} else {",
            "    if (Test-Path $runtimeCache) {",
            "        Move-Item $runtimeCache $runtimeCachePersist -Force",
            "        New-Item -Type Junction -Path $runtimeCache -Target $runtimeCachePersist | Out-Null",
            "    }",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$runtimeCache = \"$env:LOCALAPPDATA\\xfangfang\"",
            "$runtimeCachePersist = \"$persist_dir\\appdata\"",
            "if (!(Test-Path $runtimeCachePersist)) {",
            "    Move-Item $runtimeCache $runtimeCachePersist -Force",
            "} else {",
            "    Remove-Item $runtimeCache -Force -Recurse -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "shortcuts": [
        [
            "Macast.exe",
            "Macast"
        ]
    ],
    "checkver": {
        "github": "https://github.com/xfangfang/Macast"
    },
    "autoupdate": {
        "url": "https://github.com/xfangfang/Macast/releases/download/v$version/Macast-Windows-v$version.exe#/Macast.exe"
    }
}
